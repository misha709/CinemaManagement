pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'dotnet restore'
                sh 'dotnet build --no-restore'
            }
        }

        stage('Test') {
            steps {
                sh 'dotnet test --no-build --no-restore --collect "XPlat Code Coverage"'
            }
            post {
                always {
                    recordCoverage(tools: [[parser: 'COBERTURA', pattern: '**/*.xml']], sourceDirectories: [[path: 'CinemaManagement.Tests/TestResults']])
                }
            }
        }

        stage('Publish') {
            steps {
                sh '''
                  set -eux
            
                  PUBLISH_DIR="$WORKSPACE/artifacts/dist"
                  DATE=$(date +%Y-%m-%d)
                  ARCHIVE_NAME="myapp-${DATE}-${BUILD_NUMBER}.zip"
            
                  dotnet publish ./CinemaManagement.Web/CinemaManagement.Web.csproj -c Release --no-restore -o "$PUBLISH_DIR"
            
                  cd "$WORKSPACE/artifacts"
                  ls -l $PUBLISH_DIR
                  zip -r "$ARCHIVE_NAME" $PUBLISH_DIR
                '''
            }
            post {
                success {
                    archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
                }
            }
        }
    }    
}
